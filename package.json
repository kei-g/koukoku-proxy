{
  "author": {
    "email": "km.8k6ce+github@gmail.com",
    "name": "kei-g"
  },
  "description": "Proxy for telnets://koukoku.shadan.open.ad.jp",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.5",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.53.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^20.5.1"
  },
  "license": "BSD-3-Clause",
  "main": "main.mjs",
  "name": "@kei-g/koukoku-proxy",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:main": "esbuild src/main.ts --banner:js='import{createRequire as r}from\"module\";import{fileURLToPath as f}from\"url\";const{url:u}=import.meta;const require=r(u);const __filename=f(u);const __dirname=f(new URL(\".\", u));' --bundle --format=esm --minify --outfile=main.mjs --platform=node --target=es2022",
    "build:tsc": "tsc",
    "clean": "rimraf lib/ main.d.ts main.js types/",
    "delete": "rimraf *.md .cspell.json .editorconfig .eslintrc.json .git* .npmignore .vscode/ LICENSE node_modules/ package-lock.json src/",
    "deploy": "run-s build:main delete",
    "lint": "eslint src/**/*.ts",
    "prebuild": "run-s clean",
    "prepublishOnly": "run-s build",
    "start": "test -r main.mjs && node main.mjs || node --require esbuild-register src/main.ts"
  },
  "type": "module",
  "version": "1.0.0"
}
